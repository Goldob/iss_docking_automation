<launch>
	<node name="simulator" type="simulator" pkg="iss_docking_automation" />
	<node name="error_to_tf" type="error_to_tf" pkg="iss_docking_automation" />

	<node name="trajectory_planner"
		type="trajectory_planner"
		pkg="iss_docking_automation">

				<param name="acceleration" value="0.12" />
				<param name="docking_velocity" value="0.1" />
				<param name="docking_distance" value="1.0" />
  </node>

	<group ns="controllers">
		<include file="$(find iss_docking_automation)/launch/pid_translation.launch">
			<arg name="variable" value="x" />
		</include>

		<include file="$(find iss_docking_automation)/launch/pid_translation.launch">
			<arg name="variable" value="y" />
		</include>

		<include file="$(find iss_docking_automation)/launch/pid_translation.launch">
			<arg name="variable" value="z" />
		</include>

		<include file="$(find iss_docking_automation)/launch/pid_rotation.launch">
			<arg name="variable" value="yaw" />
		</include>

		<include file="$(find iss_docking_automation)/launch/pid_rotation.launch">
			<arg name="variable" value="pitch" />
		</include>

		<include file="$(find iss_docking_automation)/launch/pid_rotation.launch">
			<arg name="variable" value="roll" />
		</include>
	</group>

	<node name="corrections_applicator"
		type="corrections_applicator"
		pkg="iss_docking_automation">

			<param name="max_rate" value="0.1" />
	</node>
</launch>
